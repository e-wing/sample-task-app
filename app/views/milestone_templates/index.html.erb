<p id="notice"><%= notice %></p>

<h1>Listing Milestone Templates</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @milestone_templates.each do |milestone_template| %>
      <tr>
        <td><%= milestone_template.name %></td>
        <td><%= link_to milestone_template.template.name, milestone_template.template%></td>
        <td><%= link_to 'Show', milestone_template %></td>
        <td><%= link_to 'Edit', edit_milestone_template_path(milestone_template) %></td>
        <td><%= link_to 'Destroy', milestone_template, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

